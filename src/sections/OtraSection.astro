---
import { work } from "../cv.json";
---

<section class="work-section">
  <h2 class="section-title">PRODUCCIONES & PROYECTOS</h2>

  <div class="work-grid">
    {
      work.map(({ name, startDate, endDate, position, summary, highlights }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear = endDate !== null ? new Date(endDate).getFullYear() : "Actual";
        const years = `${startYear} - ${endYear}`;

        return (
          <article class="work-card">
            <header class="card-header">
              <div class="card-icon"></div>
              <div>
                <h2 class="company">{name}</h2>
                <h4 class="role">{position}</h4>
                <time class="years">{years}</time>
              </div>
            </header>
            <p class="summary">{summary}</p>
            <ul class="highlights">
              {highlights.map((h) => <li>{h}</li>)}
            </ul>
          </article>
        );
      })
    }
  </div>
</section>

<style>
  .work-section {
    padding: 5rem 2rem;
    background: linear-gradient(180deg, #0a0a0f, #1a1a2e);
    text-align: center;
    color: white;
  }

  .section-title {
    font-size: 2.8rem;
    margin-bottom: 3rem;
    text-transform: uppercase;
    font-family: 'Orbitron', sans-serif;
    color: var(--neon-pink);
    text-shadow: 0 0 10px var(--neon-blue), 0 0 25px var(--neon-purple);
  }

  .work-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
  }

  .work-card {
    background: rgba(20, 20, 40, 0.85);
    border: 2px solid var(--neon-purple);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 0 20px var(--neon-purple), 0 0 35px var(--neon-blue);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .work-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 0 30px var(--neon-pink), 0 0 50px var(--neon-blue);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .card-icon {
    font-size: 2rem;
    color: var(--accent);
    text-shadow: 0 0 8px var(--neon-pink);
  }

  .company {
    font-size: 1.6rem;
    color: var(--neon-pink);
    margin: 0;
    font-weight: 700;
  }

  .role {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--neon-blue);
    margin: 0.2rem 0;
  }

  .years {
    font-size: 0.95rem;
    color: var(--neon-purple);
    opacity: 0.8;
  }

  .summary {
    margin: 1rem 0;
    font-size: 1rem;
    color: #e0e0e0;
    font-style: italic;
  }

  .highlights {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .highlights li {
    font-size: 0.95rem;
    padding-left: 1.2rem;
    position: relative;
    margin-bottom: 0.6rem;
    color: var(--neon-blue);
  }

  .highlights li::before {
    content: "ðŸŽ§";
    position: absolute;
    left: 0;
    color: var(--neon-pink);
    text-shadow: 0 0 6px var(--neon-pink);
  }
</style>
